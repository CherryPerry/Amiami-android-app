<resources>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppTheme" parent="Base.AppTheme"/>

    <style name="AccentButtonOverlay" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Toolbar.Default" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <!-- No ripple effect on navigation button with logo -->
    <style name="Toolbar.Main" parent="Toolbar.Default">
        <item name="navigationIcon">@drawable/main_logo</item>
        <item name="android:theme">@style/Toolbar.Main.Theme</item>
    </style>

    <style name="Toolbar.Main.Theme" parent="ThemeOverlay.AppCompat.Light">
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Main.Navigation</item>
    </style>

    <style name="Toolbar.Main.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:background">@null</item>
    </style>

</resources>
